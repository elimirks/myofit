<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:paddingLeft="@dimen/activity_horizontal_margin"
	android:paddingRight="@dimen/activity_horizontal_margin"
	android:paddingTop="@dimen/activity_vertical_margin"
	android:paddingBottom="@dimen/activity_vertical_margin"
	tools:context=".WorkoutActivity_"
>
	<!-- Make it square -->
	<org.bitbucket.myoworkouttracker.RatioRelativeLayout
        android:id="@+id/repsContainer"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="30dp"
		heightRatio="1.0"
	>
		<TextView
        android:id="@+id/repCounterText"
        android:textSize="64dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        />
	</org.bitbucket.myoworkouttracker.RatioRelativeLayout>
    <TextView
        android:id="@+id/setCounterText"
        android:textSize="24dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/repsContainer"
        />
    <Button
		android:id="@+id/doneButton"
		android:text="Done"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
        android:padding="5dp"
	/>
</RelativeLayout>

